<link rel="stylesheet" href="/css/styles.css">
<div class="login-container">
  <h1>Log In</h1>
  <p class="signup-text">Don't have an account? <a href="/register">Sign up</a></p>
  <div class="social-login">
    <button class="google"><a class="btn btn-block" href="/auth/google" role="button" style="text-decoration: none; color: black;">Google</a></button>
      <button class="facebook">Facebook</button>
      <button class="github">Github</button>
      <button class="feide">Feide</button>
  </div>
  <div class="divider">OR</div>
  
  <form action="/login" method="POST" class="login-form">
      <input type="email" name="username" placeholder="Email" required>
      <input type="password" name="password" placeholder="Password" required>
      <button type="submit" class="login-button">Login</button>
      <a href="/forgot-password" class="forgot-password">Forgot Password?</a>
  </form>
</div>

