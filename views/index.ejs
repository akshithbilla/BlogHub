<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Blog Posts</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f6f8;
            color: #333;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 30px;
            background-color: #fff;
            border-bottom: 1px solid #e0e0e0;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 0;
            z-index: 10;
        }

        header h1 {
            font-size: 1.8em;
            font-weight: 700;
            color: #333;
        }

        .actions {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            background-color: #2ecc71;
            color: white;
            padding: 10px 20px;
            border-radius: 25px;
            text-decoration: none;
            font-size: 1em;
            transition: background-color 0.3s ease;
        }

        .btn i {
            margin-right: 8px;
        }

        .btn:hover {
            background-color: #27ae60;
        }

        .btn-light {
            background-color: #f1f1f1;
            color: #333;
            padding: 10px 20px;
            border-radius: 25px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .btn-light:hover {
            background-color: #ddd;
        }

        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #007bff;
            color: white;
            font-size: 1em;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            max-width: 900px;
            margin: 30px auto;
            padding: 0 20px;
        }

        ul {
            list-style: none;
            margin-top: 20px;
        }

        li {
            padding: 20px;
            margin: 15px 0;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

        li:hover {
            transform: translateY(-5px);
            background-color: #f9f9f9;
        }

        li h2 {
            font-size: 1.2em;
            color: #333;
            margin-bottom: 8px;
        }

        li p {
            font-size: 1em;
            color: #666;
            line-height: 1.6;
        }

        a.clickable-post {
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .clickable-post:hover h2 {
            color: #007bff;
        }

        a {
            text-decoration: none;
        }

        @media (max-width: 768px) {
            header h1 {
                font-size: 1.5em;
            }

            .actions {
                flex-direction: column;
                gap: 10px;
            }

            .btn, .btn-light {
                padding: 8px 16px;
                font-size: 0.9em;
            }

            .container {
                padding: 0 10px;
            }
        }
    </style>
</head>

<body>
    <header>
        <h1>All Blog Posts</h1>
        <div class="actions">
            <a href="/create" class="btn"><i class="fas fa-pencil-alt"></i> Write</a>
            <a href="/logout" class="btn-light"><i class="fas fa-sign-out-alt"></i> Logout</a>
           <!-- <div class="avatar">A</div>-->
        </div>
    </header>

    <div class="container">
        <!-- Blog Posts Section -->
        <ul>
            <% if (posts.length > 0) { %>
                <% posts.forEach(post => { %>
                    <a href="/post/<%= post.id %>" class="clickable-post">
                        <li>
                            <h2><%= post.title %></h2>
                            <p><%= post.content.substring(0, 200) %>...</p>
                        </li>
                    </a>
                <% }) %>
            <% } else { %>
                <li>No posts available. <a href="/create">Create one</a></li>
            <% } %>
        </ul>
    </div>
</body>
</html>
